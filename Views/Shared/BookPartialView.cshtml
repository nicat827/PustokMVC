
@model List<Book>

@foreach (Book book in Model)
{
    <div class="single-slide">
        <div class="product-card">
            <div class="product-header">
                <a href="#" class="author">
                    @book.Author.Fullname
                </a>
                <h3>
                    <a asp-controller="book" asp-action="details" asp-route-id="@book.Id">
                       @book.Name
                    </a>
                </h3>
            </div>
            <div class="product-card--body">
                <div class="card-image">
                    <img src="~/uploads/book/@book.Images.FirstOrDefault(i => i.IsPrimary == true)?.Image" alt="">
                    <div class="hover-contents">
                        <a class="hover-image" asp-controller="book" asp-action="detail" asp-route-id="@book.Id">
                            <img src="~/uploads/book/@book.Images.FirstOrDefault(i => i.IsPrimary == false)?.Image" alt="">
                        </a>
                        <div class="hover-btns">
                            <a asp-controller="basket" asp-action="add" asp-route-id="@book.Id" class="single-btn">
                                <i class="fas fa-shopping-basket"></i>
                            </a>
                            <a href="wishlist.html" class="single-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="compare.html" class="single-btn">
                                <i class="fas fa-random"></i>
                            </a>
                            <a href="#" data-toggle="modal" data-target="#quickModal"
                           class="single-btn">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="price-block">
                    <span class="price">£@(book.SalePrice - book.Discount)</span>
                    <del class="price-old">£@book.SalePrice</del>
                    <span class="price-discount">£@book.Discount</span>
                </div>
            </div>
        </div>
    </div>
}
