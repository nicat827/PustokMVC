@model List<Slide>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slides Table</h4>
                <a class="btn btn-success" asp-controller="slide" asp-action="create">Create Slide</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slide slide in Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="width:150px; height:150px;" src="~/uploads/slide/@slide.ImageURL" />
                                    </td>
                                    <td>
                                        @slide.Title
                                    </td>
                                    <td>
                                        @slide.Order
                                    </td>
                                    <td>
                                        <a asp-controller="slide" asp-action="update" asp-route-id="@slide.Id" class="btn btn-warning btn-info"><i class="mdi mdi-lead-pencil"></i></a>
                                        <a asp-controller="slide" asp-action="delete" asp-route-id="@slide.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a asp-controller="slide" asp-action="details" asp-route-id="@slide.Id" class="btn btn-primary btn-info"><i class="mdi mdi-link-variant"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
