@model List<Tag>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tags Table</h4>
                <a class="btn btn-success" asp-controller="tag" asp-action="create">Create Tag</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Books count
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Tag tag in Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                      @count  
                                    </td>
                                    <td>
                                        @tag.Name
                                    </td>
                                    <td>
                                        @tag.BookTags.Count
                                    </td>
                                    <td>
                                        <a asp-controller="tag" asp-action="update" asp-route-id="@tag.Id" class="btn btn-warning btn-info"><i class="mdi mdi-lead-pencil"></i></a>
                                        <a asp-controller="tag" asp-action="delete" asp-route-id="@tag.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a asp-controller="tag" asp-action="detail" asp-route-id="@tag.Id" class="btn btn-primary btn-info"><i class="mdi mdi-link-variant"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
