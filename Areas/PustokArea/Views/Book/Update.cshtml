@model UpdateBookVM

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Book:</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <img style="width:150px;height:150px;" src="~/uploads/book/@Model.BookImages.FirstOrDefault(b => b.IsPrimary == true)?.Image" />
                        <label asp-for="MainPhoto">Main photo:</label>
                        <input asp-for="MainPhoto" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="MainPhoto"></span>
                    </div>
                    <div class="form-group">
                        <img style="width:150px;height:150px;" src="~/uploads/book/@Model.BookImages.FirstOrDefault(b => b.IsPrimary == false)?.Image" />
                        <label asp-for="HoverPhoto">Hover photo:</label>
                        <input asp-for="HoverPhoto" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="HoverPhoto"></span>
                    </div>
                  
                    @foreach (BookImage image in Model.BookImages.Where(bi => bi.IsPrimary == null))
                    {
                        <div class="custom-image-div">
                            <img style="width:150px;height:150px;" src="~/uploads/book/@Model.BookImages.FirstOrDefault(b => b.IsPrimary == null)?.Image" />
                            <button class="custom-close-btn btn btn-danger ">X</button>
                            <input type="hidden" value="ImageIds"/>
                        </div>
                    }
                  
                    <div class="form-group">
 
                        <label asp-for="OtherPhotos">Other photos:</label>
                        <input asp-for="OtherPhotos" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="OtherPhotos"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorId"></label>
                        <select asp-for="AuthorId" class="form-control" asp-items="new SelectList(Model.Authors, nameof(Author.Id), nameof(Author.Fullname))">
                        </select>
                        <span class="text-danger p-2 " asp-validation-for="AuthorId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreId"></label>
                        <select asp-for="GenreId" class="form-control" asp-items="new SelectList(Model.Genres, nameof(Genre.Id), nameof(Genre.Name))">
                        </select>
                        <span class="text-danger p-2 " asp-validation-for="AuthorId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TagIds"></label>
                        <select asp-for="TagIds" class="form-control" asp-items="new SelectList(Model.Tags, nameof(Tag.Id), nameof(Tag.Name))">
                        </select>
                        <span class="text-danger p-2 " asp-validation-for="TagIds"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PageCount"></label>
                        <input asp-for="PageCount" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="PageCount"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostPrice"></label>
                        <input asp-for="CostPrice" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="Description"></span>
                    </div> 
                    <div class="form-group">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="Discount"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalePrice"></label>
                        <input asp-for="SalePrice" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsAviable"></label>
                        <input asp-for="IsAviable" class="form-control">
                        <span class="text-danger p-2 " asp-validation-for="IsAviable"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button asp-controller="book" asp-action="index" class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/admin/js/productUpdate.js"></script>
}

@section css {
    <link rel="stylesheet" type="text/css" href="~/admin/css/productUpdate.css" />
}